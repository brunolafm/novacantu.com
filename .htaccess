#Redireciona para https
	RewriteEngine On
	RewriteCond %{HTTPS} off
	RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R,L]

#Redireciona a p√°gina com www para sem www
	RewriteEngine On
	RewriteCond %{HTTP_HOST} ^www.(.*) [NC]
	RewriteRule ^(.*) https://%1/$1 [R=301,L]

# Erro 404
